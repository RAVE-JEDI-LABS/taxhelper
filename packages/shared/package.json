{
  "name": "@taxhelper/shared",
  "version": "1.0.0",
  "description": "Shared OpenAPI schema and generated types for TaxHelper",
  "main": "generated/typescript/schema.ts",
  "types": "generated/typescript/schema.ts",
  "exports": {
    ".": "./generated/typescript/schema.ts",
    "./generated/typescript/schema": "./generated/typescript/schema.ts"
  },
  "scripts": {
    "generate": "pnpm run generate:ts && pnpm run generate:python",
    "generate:ts": "openapi-typescript openapi.yaml -o generated/typescript/schema.ts",
    "generate:python": "datamodel-codegen --input openapi.yaml --output generated/python/models.py --input-file-type openapi --output-model-type pydantic_v2.BaseModel",
    "validate": "npx @redocly/cli lint openapi.yaml"
  },
  "devDependencies": {
    "openapi-typescript": "^7.0.0",
    "@redocly/cli": "^1.5.0"
  }
}
